# =============================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL="postgresql://bps_user:your_secure_password@localhost:5432/bps_assessment"

# =============================================
# üîê JWT AUTHENTICATION
# =============================================
# JWT secret key (minimum 32 characters for security)
JWT_SECRET="bps-assessment-system-jwt-secret-key-2024-very-secure-min-32-chars"

# JWT token expiration time
# Options: "1h", "1d", "7d", "30d"
JWT_EXPIRES_IN="7d"

# =============================================
# üåê SERVER CONFIGURATION
# =============================================
# Server port
PORT=5000

# Application environment
# Options: "development", "staging", "production"
NODE_ENV="development"

# =============================================
# üåç CORS CONFIGURATION
# =============================================
# Frontend URL for CORS policy
FRONTEND_URL="http://localhost:3000"

# Additional allowed origins (comma-separated)
# ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,https://yourdomain.com"

# =============================================
# üìÅ FILE UPLOAD CONFIGURATION
# =============================================
# Maximum file size in bytes (5MB = 5242880)
MAX_FILE_SIZE=5242880

# Upload directory path
UPLOAD_PATH="/uploads"

# Allowed file types for uploads
ALLOWED_FILE_TYPES=".jpg,.jpeg,.png,.pdf,.xlsx,.xls"

# =============================================
# üìß EMAIL CONFIGURATION (Optional)
# =============================================
# Email server settings (for password reset, notifications)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="BPS Assessment System <noreply@bps-assessment.com>"

# =============================================
# üîí SECURITY CONFIGURATION
# =============================================
# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session secret (for additional security)
SESSION_SECRET="bps-session-secret-key-2024-secure"

# =============================================
# üìä LOGGING CONFIGURATION
# =============================================
# Log level: "error", "warn", "info", "debug"
LOG_LEVEL="info"

# Log file path
LOG_FILE_PATH="./logs/app.log"

# =============================================
# üöÄ PERFORMANCE CONFIGURATION
# =============================================
# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# =============================================
# üß™ DEVELOPMENT/DEBUG SETTINGS
# =============================================
# Enable debug mode (detailed error messages)
DEBUG_MODE=true

# Enable Prisma query logging
PRISMA_LOG_QUERIES=false

# Enable API request logging
ENABLE_REQUEST_LOGGING=true

# =============================================
# üîß THIRD-PARTY INTEGRATIONS (Optional)
# =============================================
# Google OAuth (if implemented)
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft OAuth (if implemented)  
# MICROSOFT_CLIENT_ID="your-microsoft-client-id"
# MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

# File storage service (if using cloud storage)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_BUCKET_NAME="bps-assessment-files"
# AWS_REGION="ap-southeast-1"

# =============================================
# üì± NOTIFICATION SETTINGS (Optional)
# =============================================
# WhatsApp API (if implemented)
# WHATSAPP_API_KEY="your-whatsapp-api-key"
# WHATSAPP_PHONE_NUMBER="your-whatsapp-number"

# SMS Gateway (if implemented)
