{
  "name": "bps-pringsewu-backend",
  "version": "1.0.0",
  "description": "Sistem Penilaian Kinerja Pegawai BPS Kabupaten Pringsewu",
  "main": "src/app.js",
  "scripts": {
    "dev": "node src/app.js",
    "start": "node src/app.js",
    "prod": "cross-env NODE_ENV=production node src/app.js",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:reset": "npx prisma migrate reset --force",
    "db:seed": "node prisma/seed.js",
    "db:studio": "npx prisma studio",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:fresh": "npm run db:reset && npm run db:seed",
    "fix:attendance": "npm run db:migrate -- --name add_jumlah_attendance_fields && npm run db:seed"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fontkit": "^2.0.4",
    "form-data": "^4.0.3",
    "helmet": "^7.1.0",
    "jimp": "^0.16.13",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.1",
    "puppeteer-core": "^24.13.0",
    "xlsx": "^0.18.5"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0"
  }
}
